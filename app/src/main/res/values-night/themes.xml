<resources>
    <!-- Base application theme. -->
    <style name="Theme.BlueScreenSimulatorPlus" parent="Theme.Material3.DynamicColors.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#283593</item>
        <item name="colorPrimaryVariant">#1a237e</item>
        <item name="colorOnPrimary">#fefefe</item>
        <item name="backgroundColor">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2962ff</item>
        <item name="colorSecondaryVariant">#7398ff</item>
        <item name="colorOnSecondary">#fefefe</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.BlueScreenSimulatorPlus.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>