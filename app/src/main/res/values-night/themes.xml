<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueScreenSimulatorPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3333ee</item>
        <item name="colorPrimaryVariant">#3333ca</item>
        <item name="colorOnPrimary">#eee</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4444ee</item>
        <item name="colorSecondaryVariant">#3333ee</item>
        <item name="colorOnSecondary">#eee</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.BlueScreenSimulatorPlus.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>