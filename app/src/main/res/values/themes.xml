<resources>
    <!-- Base application theme. -->
    <style name="Theme.BlueScreenSimulatorPlus" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#283593</item>
        <item name="colorPrimaryVariant">#1a237e</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2962ff</item>
        <item name="colorSecondaryVariant">#7398ff</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlueScreenSimulatorPlus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlueScreenSimulatorPlus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlueScreenSimulatorPlus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BlueScreenSimulatorPlus.Fullscreen" parent="Theme.BlueScreenSimulatorPlus">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.BlueScreenSimulatorPlus.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BlueScreenSimulatorPlus.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#2962ff</item>
        <item name="fullscreenTextColor">#7398ff</item>
    </style>
</resources>