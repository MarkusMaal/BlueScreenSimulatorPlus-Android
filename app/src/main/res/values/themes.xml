<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueScreenSimulatorPlus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0000B3</item>
        <item name="colorPrimaryVariant">#000075</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#000080</item>
        <item name="colorSecondaryVariant">#000090</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BlueScreenSimulatorPlus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BlueScreenSimulatorPlus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BlueScreenSimulatorPlus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BlueScreenSimulatorPlus.Fullscreen" parent="Theme.BlueScreenSimulatorPlus">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.BlueScreenSimulatorPlus.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BlueScreenSimulatorPlus.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>